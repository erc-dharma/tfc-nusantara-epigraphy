          <l n="c">Āhr̥to bhaiṣaja<lb n="1v1" break="no"/><unclear>ś</unclear> caiva</l> 
          <l n="d">sarvve t<unclear>e</unclear> mataru coditaḥ <g type="ddanda"/></l>
        </lg>
           
          <lg n="3" met="anuṣṭubh" xml:lang="san-Latn">
          <l n="a">brahmaṇī gariṇī tatvam</l> 
          <l n="b">anāryyam vihīnan tathā</l>
          <l n="c">yadvat pāpaṁ mahat prāpya</l> 
          <l n="d">tadvat· maccha śapāt śapāt· ||</l> 
        </lg>

