                        <rdg source="TitiSurtiNastiti1996_01">tapa<supplied reason="omitted">k</supplied></rdg>
                    </app>
                    <app loc="2">
                        <lem source="Noorduyn1976_01 TitiSurtiNastiti1996_01">I<lb n="3" break="no"/>ña</lem>
                        <rdg source="Holle1867_01 Pleyte1911_03">bha<lb n="3" break="no"/>gya</rdg>
                    </app>
                    <app loc="4">
