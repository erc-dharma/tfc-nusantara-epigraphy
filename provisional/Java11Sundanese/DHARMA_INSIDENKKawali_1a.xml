                    </app>
                    <app loc="9">
                        <lem>hǝbǝl</lem>
                        <rdg source="bib:Friederich1855_01">hǝbǝṅ</rdg>
                        <rdg source="bib:Holle1867_01 bib:Noorduyn1976_01 bib:HasanDjafar1991_01 bib:TitiSurtiNastiti1996_01 bib:RichadianaKartakusuma2005_01">hǝ:bǝ:l</rdg>
                    </app>
