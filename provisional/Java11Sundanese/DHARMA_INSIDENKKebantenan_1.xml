                    </app>
                    <app loc="1v4">
                        <lem><choice><orig>ḍituḍi</orig><reg>ḍituḍiṁ</reg></choice></lem>
                        <rdg source="bib:Pleyte1911_01">ḍituḍiṁ</rdg>
                    </app>
